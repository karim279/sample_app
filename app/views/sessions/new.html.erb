<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
	<div class="form-group col-xs-6 col-xs-offset-3">
		<%= form_tag(sessions_path) do %>
			<%= label_tag :email, nil, class: "control-label" %>
			<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter email" %>

			<%= label_tag :password, nil, class: "control-label" %>
			<%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>

			<%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

		<p> New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>